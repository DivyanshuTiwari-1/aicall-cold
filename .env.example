# AI Dialer System Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai_dialer
DB_USER=postgres
DB_PASSWORD=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# API CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000/api/v1
JWT_SECRET=<YOUR_JWT_SECRET>

JWT_EXPIRES_IN=24h

# =============================================================================
# ASTERISK ARI CONFIGURATION
# =============================================================================
ARI_URL=http://asterisk:8088/ari
ARI_USERNAME=ai-dialer
ARI_PASSWORD=ai-dialer-password

# =============================================================================
# TELNYX SIP TRUNK CONFIGURATION
# =============================================================================
# Get these from your Telnyx account at https://portal.telnyx.com/
TELNYX_API_KEY=<YOUR_TELNYX_API_KEY>
TELNYX_PHONE_NUMBER=<YOUR_TELNYX_NUMBER>
TELNYX_SIP_USERNAME=<YOUR_TELNYX_USERNAME>
TELNYX_SIP_PASSWORD=<YOUR_TELNYX_PASSWORD>
TELNYX_DOMAIN=<YOUR_TELNYX_DOMAIN>
TELNYX_SIP_URI=<YOUR_TELNYX_SIP_URI>
TELNYX_CALLER_ID=<OUTBOUND_CALLER_ID>
TELNYX_IP_RANGE=<ALLOWED_IP_RANGE>

# =============================================================================
# TEXT-TO-SPEECH CONFIGURATION
# =============================================================================
# Primary TTS Engine (google, azure, aws, espeak)
TTS_ENGINE=google
TTS_LANGUAGE=en-US
TTS_VOICE=en-US-Wavenet-D
TTS_SPEED=1.0
TTS_PITCH=0.0
TTS_VOLUME=0.0


# =============================================================================
# VOICE STACK CONFIGURATION
# =============================================================================
# Use 'self_hosted' for Asterisk + Telnyx (recommended for cost savings)
# Use 'saas' for Twilio (easier setup but more expensive)
VOICE_STACK=self_hosted

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CALL CONFIGURATION
# =============================================================================
DEFAULT_CALL_TIMEOUT=30
MAX_CALL_DURATION=300
MAX_CONCURRENT_CALLS=10

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
TTS_CACHE_ENABLED=true
TTS_CACHE_TTL=3600
TTS_CACHE_MAX_SIZE=1000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=ai-dialer:*
ENABLE_DEBUG_LOGS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_EMOTION_DETECTION=true
ENABLE_VOICE_ANALYTICS=true
ENABLE_CALL_RECORDING=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AI_CONVERSATION=true
