# AI Dialer System Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai_dialer
DB_USER=postgres
DB_PASSWORD=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# API CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000/api/v1
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# =============================================================================
# ASTERISK ARI CONFIGURATION
# =============================================================================
ARI_URL=http://asterisk:8088/ari
ARI_USERNAME=ai-dialer
ARI_PASSWORD=ai-dialer-password

# =============================================================================
# TELNYX SIP TRUNK CONFIGURATION
# =============================================================================
# Get these from your Telnyx account at https://portal.telnyx.com/
TELNYX_USERNAME=your-telnyx-username
TELNYX_PASSWORD=your-telnyx-password
TELNYX_DOMAIN=sip.telnyx.com
TELNYX_SIP_URI=sip.telnyx.com
TELNYX_CALLER_ID=+12025550123
TELNYX_IP_RANGE=66.109.0.0/16

# =============================================================================
# TEXT-TO-SPEECH CONFIGURATION
# =============================================================================
# Primary TTS Engine (google, azure, aws, espeak)
TTS_ENGINE=google
TTS_LANGUAGE=en-US
TTS_VOICE=en-US-Wavenet-D
TTS_SPEED=1.0
TTS_PITCH=0.0
TTS_VOLUME=0.0

# Google Cloud TTS (Recommended for best quality)
GOOGLE_TTS_API_KEY=your-google-cloud-tts-api-key
GOOGLE_TTS_PROJECT_ID=your-google-cloud-project-id

# Azure Cognitive Services TTS (Alternative)
AZURE_TTS_KEY=your-azure-cognitive-services-key
AZURE_TTS_REGION=your-azure-region

# AWS Polly TTS (Alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# VOICE STACK CONFIGURATION
# =============================================================================
# Use 'self_hosted' for Asterisk + Telnyx (recommended for cost savings)
# Use 'saas' for Twilio (easier setup but more expensive)
VOICE_STACK=self_hosted

# Twilio Configuration (if using VOICE_STACK=saas)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+12025550123

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# OpenAI API for advanced AI features (optional)
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Health check endpoints
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CALL CONFIGURATION
# =============================================================================
# Default call settings
DEFAULT_CALL_TIMEOUT=30
MAX_CALL_DURATION=300
MAX_CONCURRENT_CALLS=10

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# TTS audio caching
TTS_CACHE_ENABLED=true
TTS_CACHE_TTL=3600
TTS_CACHE_MAX_SIZE=1000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode
DEBUG=ai-dialer:*
ENABLE_DEBUG_LOGS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# SSL/TLS settings (for production)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_EMOTION_DETECTION=true
ENABLE_VOICE_ANALYTICS=true
ENABLE_CALL_RECORDING=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AI_CONVERSATION=true
