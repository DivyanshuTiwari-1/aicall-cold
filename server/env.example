# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_dialer
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Voice stack selection: saas | self_hosted
VOICE_STACK=saas

# Self-hosted service URLs (used when VOICE_STACK=self_hosted)
ASR_URL=http://localhost:8001
LLM_URL=http://localhost:8002
TTS_URL=http://localhost:8003

# Asterisk ARI (for self-hosted telephony)
ARI_URL=http://localhost:8088
ARI_USER=ari_user
ARI_PASS=ari_password

# Twilio Configuration (SaaS option)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI Configuration (SaaS option)
OPENAI_API_KEY=sk-your-openai-key

# ElevenLabs Configuration (Optional for custom voices)
ELEVENLABS_API_KEY=your_elevenlabs_key

# Emotion Detection (Optional)
EMOTION_API_KEY=your_emotion_api_key

# CRM Integrations (Optional)
SALESFORCE_CLIENT_ID=your_salesforce_id
HUBSPOT_API_KEY=your_hubspot_key

# Webhook URLs
WEBHOOK_BASE_URL=http://localhost:3000
